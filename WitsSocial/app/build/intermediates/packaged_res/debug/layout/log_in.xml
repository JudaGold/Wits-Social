<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/SignUpText"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="Fill in all details to sign in."
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#3D1BD3"
                android:textSize="30dp"
                tools:text="Fill in all details to sign in." />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="66dp"
                android:layout_height="match_parent">

            </TextView>

            <EditText
                android:id="@+id/UserNameToLogIn"
                android:layout_width="274dp"
                android:layout_height="48dp"
                android:gravity="center_horizontal|center_vertical"
                android:hint="@string/UserNameToLogIn"
                android:importantForAutofill="no"
                android:inputType="text"
                android:textColorHint="@color/black"
                tools:ignore="TouchTargetSizeCheck">

            </EditText>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="66dp"
                android:layout_height="match_parent">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="66dp"
                android:layout_height="match_parent">

            </TextView>

            <EditText
                android:id="@+id/password"
                android:layout_width="274dp"
                android:layout_height="40dp"
                android:gravity="center_horizontal|center_vertical"
                android:hint="@string/PasswordToLogIn"
                android:inputType="textPassword"
                android:textColorHint="#000000"
                tools:ignore="TouchTargetSizeCheck">

            </EditText>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="66dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:orientation="horizontal"
            android:paddingLeft="100dp"
            android:paddingTop="50dp"
            android:paddingRight="100dp">

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="166dp"
                android:layout_height="63dp"
                android:background="@drawable/buttonshape"
                android:backgroundTint="#237E25"
                android:text="@string/logIn"
                android:textSize="18sp">

            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="If you do not have an account already"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/SignUpNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="onClick"
                android:text="@string/SignUpButton"
                android:textColor="#0000FF"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>