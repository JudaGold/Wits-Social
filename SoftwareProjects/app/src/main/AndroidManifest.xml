        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Display_Hashtag_Posts"
            android:exported="false" />
        <activity
            android:name=".Replies"
            android:exported="false" />
        <activity
            android:name=".user_display"
            android:exported="false" />
        <activity
            android:name=".Add_Profile_Pic"
            android:exported="false" />
