<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:text="My Profile"
            android:textColor="#00008B"
            android:textSize="34sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="325dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profile_pic"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_weight="1"
                tools:srcCompat="@tools:sample/avatars" />

            <Button
                android:id="@+id/btnAddNewPic"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:fontFamily="@font/lato_regular"
                android:gravity="center"
                android:text="Add New Picture"
                android:textSize="18sp"
                app:iconTint="#FFFFFF"></Button>
        </LinearLayout>

        <TextView
            android:id="@+id/UserName_Label"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:paddingStart="50dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:scaleX="2"
            android:scaleY="2"
            android:text="UserName:"
            android:textSize="10sp"
            android:fontFamily="@font/lato_regular"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/UserName_txt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="25dp"
            android:layout_weight="1"
            android:fontFamily="@font/lato_regular"
            android:paddingStart="25dp"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/Bio_Label"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:fontFamily="@font/lato_regular"
            android:paddingStart="50dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:scaleX="2"
            android:scaleY="2"
            android:text="Bio:"
            android:textSize="10sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/BioText"
            android:layout_width="match_parent"
            android:layout_height="137dp"
            android:layout_marginStart="25dp"
            android:ems="10"
            android:fontFamily="@font/lato_regular"
            android:inputType="textMultiLine"
            android:paddingStart="25dp"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/full_name_Label"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:fontFamily="@font/lato_regular"
            android:paddingStart="50dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:scaleX="2"
            android:scaleY="2"
            android:text="Full Name:"
            android:textSize="10sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:ems="10"
            android:fontFamily="@font/lato_regular"
            android:inputType="text"
            android:paddingStart="25dp"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/PhoneNumber_Label"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:paddingStart="50dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:scaleX="2"
            android:scaleY="2"
            android:text="Phone Number:"
            android:textSize="10sp"
            android:fontFamily="@font/lato_regular"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:ems="10"
            android:fontFamily="@font/lato_regular"
            android:inputType="number"
            android:paddingStart="25dp"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/EmailAddress_Label"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:paddingStart="50dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:scaleX="2"
            android:scaleY="2"
            android:text="Email Address:"
            android:textSize="10sp"
            android:fontFamily="@font/lato_regular"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/email_address_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:ems="10"
            android:fontFamily="@font/lato_regular"
            android:inputType="text"
            android:paddingStart="25dp"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnSave2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/buttonshape"
            android:backgroundTint="#237E25"
            android:fontFamily="@font/lato_regular"
            android:gravity="center"
            android:text="Save"
            android:textSize="20sp" />

    </LinearLayout>
</ScrollView>