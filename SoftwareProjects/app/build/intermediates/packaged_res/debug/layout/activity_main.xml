<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/exp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/SignUpText"
            android:layout_width="match_parent"
            android:layout_height="169dp"
            android:fontFamily="@font/lato_bold"
            android:gravity="center"
            android:text="CHATTER"
            android:textColor="#00008B"
            android:textColorHint="#283593"
            android:textSize="30dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:fontFamily="@font/lato_regular"
            android:gravity="center"
            android:text="Enter\n your username and password to continue"
            android:textAlignment="center"
            android:textColor="#00008B"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/UserNameToLogIn"
            android:layout_width="280dp"
            android:layout_height="54dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/input_box"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:drawablePadding="12dp"
            android:hint="username"
            android:importantForAutofill="no"
            android:inputType="text"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColorHint="@android:color/darker_gray"
            android:fontFamily="@font/lato_regular"
            android:textSize="25dp"></EditText>

        <EditText
            android:id="@+id/password"
            android:layout_width="280dp"
            android:layout_height="54dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/input_box"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:drawablePadding="12dp"
            android:fontFamily="@font/lato_regular"
            android:hint="password"
            android:inputType="textPassword"
            android:paddingStart="12dp"

            android:paddingEnd="12dp"

            android:textColorHint="@android:color/darker_gray"
            android:textSize="25dp"
            tools:ignore="TouchTargetSizeCheck"></EditText>


        <CheckBox
            android:id="@+id/rememberMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Remember me?" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="135dp"
            android:layout_height="63dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#123F4C"
            android:fontFamily="@font/lato_regular"
            android:gravity="center"
            android:text="@string/logIn"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:iconTint="#FFFFFF"></Button>


        <TextView
            android:id="@+id/fp"

            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/lato_regular"
            android:text="forgot password?"
            android:textColor="#121111"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:text="Dont have an account?"
                android:textColor="#000000"
                android:fontFamily="@font/lato_regular"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/TSI"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:fontFamily="@font/lato_regular"
                android:gravity="center_vertical"
                android:text="Create one here!"
                android:textColor="#0000FF"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>